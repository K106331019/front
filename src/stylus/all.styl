
  //--------------------------- header ---------------------------------------//
@import url('https://fonts.googleapis.com/css2?family=Birthstone&family=Ranga:wght@400;700&family=Salsa&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Birthstone&family=Noto+Sans+TC:wght@100;300;400;500;700;900&family=Ranga:wght@400;700&family=Salsa&display=swap');
*
  font-family: 'Noto Sans TC', sans-serif;

#header
  position relative

.navbar
  background rgba(245,233,216,0.2)
  backdrop-filter blur(10px)
  position absolute
  z-index 99999
  height 90px


.nav-link
  font-size 2rem
  line-height 1
  font-weight 200
  font-family: 'Ranga', cursive;
  
.nav-link:hover
  color #954C51

.flower
  filter drop-shadow(8px 10px 15px #fae1dd)
  width 250px
  height 150px
  position absolute
  top -25px
  left 30px
  object-fit  cover

#dropdown-1 .btn,
#dropdown-2 .btn,
#dropdown-3 .btn
  border none
  border-color none
  font-family: 'Ranga', cursive;
  font-size 2rem
  line-height 1
  font-weight 300
  color rgba(0,0,0,.5)

#dropdown-1 .btn:hover
#dropdown-2 .btn:hover
#dropdown-3 .btn:hover
  background none
  color #954C51


  //------------------------ footer -----------------------------------//
.footer-all
  background url('../../image/背景.jpg') no-repeat center/cover
  height 400px
  position relative

.footer-end
  background #b08968
  position absolute
  bottom 0


//---------------------------- 首頁---------------------------------------------//
.content
  background #F0EDE8
  margin-bottom 100px


img
  object-fit  cover

h1
  font-family "Noto Serif TC", Arial, Tahoma, sans-serif
  line-height 29px
  font-weight 400
  letter-spacing 4px

.section01
  margin-top 10%

.section02
  margin-top 15%
  margin-bottom 25%

.buy
  border 1px solid rgb(172,117,118)

.buy:hover
  background rgb(172,117,118)
  border 1px solid rgb(172,117,118)


.btn,
.btn-secondary
  background none
  border-color none
  color #000

