*
  font-family: '微軟正黑體', "Microsoft JhengHei", Arial, sans-serif;


#header
  position relative

.navbar
  background rgba(245,233,216,.5)
  backdrop-filter blur(10px)
  position absolute
  z-index 5
  height 90px

.navbar-light .navbar-nav .nav-link
  font-size 1.5rem
  line-height 1.1
  font-weight 500
  font-family: Microsoft JhengHei ,Lato, Arial, Helvetica, sans-serif,woodmart-font,"Font Awesome 5 Brands","Font Awesome 5 Free"!important;
  color rgba(0,0,0,.6)

.navbar-light .navbar-nav .nav-link:hover
  color rgb(172,117,118)

.flower
  filter drop-shadow(8px 10px 15px #fae1dd)
  width 250px
  height 150px
  position absolute
  top -25px
  left 30px
  object-fit  cover

#dropdown-1 .btn,
#dropdown-2 .btn,
#dropdown-3 .btn
  border none
  border-color none
  font-family: Microsoft JhengHei ,Lato, Arial, Helvetica, sans-serif,woodmart-font,"Font Awesome 5 Brands","Font Awesome 5 Free"!important;
  font-size 1.5rem
  line-height 1.1
  font-weight 400
  color rgba(0,0,0,.5)

#dropdown-1 .btn:hover
#dropdown-2 .btn:hover
#dropdown-3 .btn:hover
  background none
  color rgb(172,117,118)

#dropdown-1 .btn-secondary
#dropdown-2 .btn-secondary
#dropdown-3 .btn-secondary
  background none

.cart-number
  background none
  color black
  text-align center

#header .navbar-collapse
  @media (max-width:990px)
    margin-top 4.9%
    background rgba(245,233,216,.8)

#header .navbar-collapse ul
  display flex
  justify-content center
  align-items center

  //------------------------ footer -----------------------------------//
.footer-all
  background url('../assets/image/背景.jpg') no-repeat center/cover
  height 200px
  position relative

.footer-end
  background #b08968
  position absolute
  bottom 0

.ig
  color #582f0e

