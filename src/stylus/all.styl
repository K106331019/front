.card
  box-shadow: 1px 1px 1px #ccc;
  width: 25rem;
  overflow: hidden;


.card img
  max-width: 100%;
  -moz-transition: all 0.3s;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
  opacity: 0.8;


.card img:hover
  transform: scale(1.1);
  opacity: 1.5;

