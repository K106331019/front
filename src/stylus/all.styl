//------------------------ 前台管理--------------------------------//
.admin-nav
  background url('../../image/背景.jpg') no-repeat center/cover
  height 150px
  
.addproduct
  background none
  border none

.addproduct:hover
  background none

.bi-plus-circle:hover
  color red


.card {
  box-shadow: 1px 1px 1px #ccc;
  width: 28rem;
  // height 37rem
  overflow: hidden;
  // background: black;
}

.card img {
  max-width: 100%;
  -moz-transition: all 0.3s;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
  opacity: 0.9;
}

.card img:hover {
  -moz-transform: scale(1.2);
  -webkit-transform: scale(1.2);
  transform: scale(1.2);
  opacity: 1.0;
}