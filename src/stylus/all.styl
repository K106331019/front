.serve
  position relative

.serve::before
  content ''
  width 150px
  height 1px
  background rgb(160, 155, 155)
  position absolute
  top 120%
  left 42%



.container:hover .hot{
  opacity: 1;
}

.hot{
  position: absolute;
  background-color: rgba(69, 69, 69, 0.7)
  width: 20%;
  height: 15%;
  border-radius 50%
  top: 90%;
  left: 85%
  transform: translate(-50%,-50%)
  opacity: 0;
  transition: opacity 0.5s ease-in
}

